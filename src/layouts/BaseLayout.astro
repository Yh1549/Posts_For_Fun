---
// Component Imports
import Footer from "../components/container/Footer.astro";
import Header from "../components/container/Header.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/

const { pageInfo } = Astro.props;
---

<html lang="en" class="font-custom">
  <head>
    <script>
      // init themeController for All Page
      import { themeInit } from "../utils/themeController";
      themeInit();
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageInfo.title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap");
    </style>
  </head>
  <body id="bodyStyle">
    <Header />
    <main class="mx-auto w-5/6">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  #bodyStyle {
    display: grid;
    grid-template-rows: auto 1fr auto;
    height: 100vh;
  }
</style>
