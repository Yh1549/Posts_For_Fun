
<nav role="tablist" class="tabs tabs-bordered">
  <a role="tab" class="tab"  href="/">Home</a>
  <a role="tab" class="tab"  href="/blogs">Blog</a>
  <a role="tab" class="tab" href="/about">About</a>
</nav>
<script>
  const tabs = document.querySelectorAll('.tab');
  tabs.forEach((el)=>{
    if(window.location.pathname === el.getAttribute("href")){
      el.classList.add("tab-active");
    }else{
      el.classList.remove("tab-active");
    }
  })
</script>